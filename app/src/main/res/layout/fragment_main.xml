<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:id="@+id/main.sv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:contentDescription="scroll"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/banner.iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:src="@drawable/main_banner"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:id="@+id/community_btn.iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/community_btn"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="138dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintTop_toTopOf="@id/banner.iv"
                app:layout_constraintBottom_toBottomOf="@id/banner.iv"
                app:layout_constraintEnd_toEndOf="@id/banner.iv"/>

            <TextView
                android:id="@+id/make_title1.tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나만의 동화책"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/banner.iv"
                app:layout_constraintStart_toStartOf="@id/banner.iv"/>

            <ImageView
                android:id="@+id/make_fairytale.iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/make_fairytale"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/make_title1.tv"
                app:layout_constraintStart_toStartOf="@id/banner.iv"
                app:layout_constraintEnd_toEndOf="@id/banner.iv"/>

            <TextView
                android:id="@+id/make_title2.tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="나만의 동화 만들기"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="@id/make_fairytale.iv"
                app:layout_constraintStart_toStartOf="@id/make_fairytale.iv"/>

            <TextView
                android:id="@+id/make_sub.tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="간단한 영어 단어로 동화를 만들어요"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/make_title2.tv"
                app:layout_constraintStart_toStartOf="@id/make_title2.tv"/>


            <ImageView
                android:id="@+id/make_btn.iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/make_btn"
                app:layout_constraintBottom_toBottomOf="@id/make_fairytale.iv"
                app:layout_constraintStart_toStartOf="@id/make_fairytale.iv"/>


            <ImageView
                android:id="@+id/book_ex1.iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/book_card_ex1"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toBottomOf="@id/make_fairytale.iv"
                app:layout_constraintStart_toStartOf="@id/make_fairytale.iv"
                app:layout_constraintEnd_toEndOf="@id/make_fairytale.iv"/>

            <TextView
                android:id="@+id/book_ex1.tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Happy Lucky day!"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="@id/book_ex1.iv"
                app:layout_constraintStart_toStartOf="@id/book_ex1.iv"/>


            <TextView
                android:id="@+id/keyword1_1.tv"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:background="@drawable/chip23"
                android:layout_margin="8dp"
                android:text="bio머시기"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:paddingTop="5dp"
                android:paddingBottom="6dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/book_ex1.tv"
                app:layout_constraintStart_toStartOf="@id/book_ex1.tv"
                />

            <TextView
                android:id="@+id/keyword1_2.tv"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:background="@drawable/chip23"
                android:layout_margin="8dp"
                android:text="bio머시기"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:paddingTop="5dp"
                android:paddingBottom="6dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/book_ex1.tv"
                app:layout_constraintStart_toEndOf="@id/keyword1_1.tv"
                />

            <TextView
                android:id="@+id/keyword1_3.tv"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:background="@drawable/chip23"
                android:layout_margin="8dp"
                android:text="bio머시기"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:paddingTop="5dp"
                android:paddingBottom="6dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/book_ex1.tv"
                app:layout_constraintStart_toEndOf="@id/keyword1_2.tv"
                />

            <TextView
                android:id="@+id/keyword1_4.tv"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:background="@drawable/chip23"
                android:layout_margin="8dp"
                android:text="+2"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:paddingTop="5dp"
                android:paddingBottom="6dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/book_ex1.tv"
                app:layout_constraintStart_toEndOf="@id/keyword1_3.tv"
                />

            <ImageView
                android:id="@+id/book_ex1_btn.iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/start_btn1"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintStart_toStartOf="@id/book_ex1.iv"
                app:layout_constraintBottom_toBottomOf="@id/book_ex1.iv"/>

            <ImageView
                android:id="@+id/book_ex1_heart.iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/blank_heart"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="@id/book_ex1_btn.iv"
                app:layout_constraintBottom_toBottomOf="@id/book_ex1_btn.iv"
                app:layout_constraintEnd_toEndOf="@id/book_ex1.iv"/>

            <ImageView
                android:id="@+id/book_ex2.iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/book_card_ex2"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toBottomOf="@id/book_ex1.iv"
                app:layout_constraintStart_toStartOf="@id/book_ex1.iv"
                app:layout_constraintEnd_toEndOf="@id/book_ex1.iv"/>

            <TextView
                android:id="@+id/book_ex2.tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Happy Lucky day!"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="@id/book_ex2.iv"
                app:layout_constraintStart_toStartOf="@id/book_ex2.iv"/>

            <TextView
                android:id="@+id/keyword2_1.tv"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:background="@drawable/chip23"
                android:layout_margin="8dp"
                android:text="bio머시기"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:paddingTop="5dp"
                android:paddingBottom="6dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/book_ex2.tv"
                app:layout_constraintStart_toStartOf="@id/book_ex2.tv"
                />

            <TextView
                android:id="@+id/keyword2_2.tv"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:background="@drawable/chip23"
                android:layout_margin="8dp"
                android:text="bio머시기"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:paddingTop="5dp"
                android:paddingBottom="6dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/book_ex2.tv"
                app:layout_constraintStart_toEndOf="@id/keyword2_1.tv"
                />

            <TextView
                android:id="@+id/keyword2_3.tv"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:background="@drawable/chip23"
                android:layout_margin="8dp"
                android:text="bio머시기"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:paddingTop="5dp"
                android:paddingBottom="6dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/book_ex2.tv"
                app:layout_constraintStart_toEndOf="@id/keyword2_2.tv"
                />

            <TextView
                android:id="@+id/keyword2_4.tv"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:background="@drawable/chip23"
                android:layout_margin="8dp"
                android:text="+2"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:paddingTop="5dp"
                android:paddingBottom="6dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/book_ex2.tv"
                app:layout_constraintStart_toEndOf="@id/keyword2_3.tv" />

            <ImageView
                android:id="@+id/book_ex2_btn.iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/start_btn2"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintStart_toStartOf="@id/book_ex2.iv"
                app:layout_constraintBottom_toBottomOf="@id/book_ex2.iv"/>

            <ImageView
                android:id="@+id/book_ex2_heart.iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/heart"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="@id/book_ex2_btn.iv"
                app:layout_constraintBottom_toBottomOf="@id/book_ex2_btn.iv"
                app:layout_constraintEnd_toEndOf="@id/book_ex2.iv"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>